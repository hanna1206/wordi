{
  "name": "wordi",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier": "prettier . --write",
    "lint:js": "eslint ./src --ext ts,tsx --fix --report-unused-disable-directives --max-warnings 0",
    "lint:types": "tsc --noEmit",
    "lint": "run-p lint:js lint:types",
    "deps:check": "madge ./src/ --circular",
    "deps:orphans": "madge src --orphans --exclude '(\\.css$|\\.scss$|\\.svg$|\\.png$|\\.json$|stories/|__tests__|\\.test\\.(ts|tsx)$|\\.stories\\.(ts|tsx)$)|(\\.d\\.ts$)|(setupTest\\.ts$)|(main\\.tsx$)'",
    "deps:draw": "madge src --image deps-graph.png",
    "deps:all": "npm run deps:check && npm run deps:orphans"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.21.1",
    "@emotion/react": "^11.14.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.2",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.21.1",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "madge": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5"
  }
}
